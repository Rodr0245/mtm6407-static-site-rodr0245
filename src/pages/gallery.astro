---
import GalleryLayout from "../layouts/GalleryLayout.astro";
---

<GalleryLayout title="Gallery">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 my-12">
		<h1 class="text-4xl font-bold">Gallery</h1>
		<p class="text-xl mt-4">
			Browse through some of our recent work. Check out the amazing loc styles
			created by our talented team!
		</p>
	</div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-8 mb-24 container mx-auto">
    <img
      src="https://picsum.photos/400/300"
      alt="Locs Image 1"
      class="w-full h-auto rounded-md shadow-lg"
    />
    <img
      src="https://picsum.photos/400/301"
      alt="Locs Image 2"
      class="w-full h-auto rounded-md shadow-lg"
    />
    <img
      src="https://picsum.photos/400/302"
      alt="Locs Image 3"
      class="w-full h-auto rounded-md shadow-lg"
    />
    <img
      src="https://picsum.photos/400/300"
      alt="Locs Image 1"
      class="w-full h-auto rounded-md shadow-lg"
    />
    <img
      src="https://picsum.photos/400/301"
      alt="Locs Image 2"
      class="w-full h-auto rounded-md shadow-lg"
    />
    <img
      src="https://picsum.photos/400/302"
      alt="Locs Image 3"
      class="w-full h-auto rounded-md shadow-lg"
    />
	</div>
</GalleryLayout>
