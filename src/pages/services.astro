---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Our Services">
  <div class="h-screen bg-cover bg-center" style="background-image: url('/images/forest-4.jpg')">
    <div class="container mx-auto p-6 lg:p-12">
      <h1 class="text-6xl font-bold leading-tight text-white">Photography Services</h1>
      <p class="text-xl mt-4 text-white">Explore the range of photography services I offer:</p>
      <ul class="list-disc pl-5 mt-4 space-y-2 text-white">
        <li>Portrait Photography</li>
        <li>Event Photography</li>
        <li>Commercial Photography</li>
        <li>Nature and Landscape Photography</li>
      </ul>
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-4">
        <img src="/images/forest-5.jpg" alt="Forest 5" class="rounded-md shadow-lg" />
        <img src="/images/forest-6.jpg" alt="Forest 6" class="rounded-md shadow-lg" />
      </div>
    </div>
  </div>
</BaseLayout>
