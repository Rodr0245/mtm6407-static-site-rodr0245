---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact Us">
  <div class="container mx-auto p-6 lg:p-12 h-screen ">
    <h1 class="text-4xl font-bold">Contact Me</h1>
    <p class="text-xl mt-4">
      Feel free to get in touch with me for appointments, questions, or any
      inquiries regarding my photography services!
    </p>

    <form action="/submit" method="POST" class="mt-8">
      <label for="name" class="block text-lg">Your Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        class="w-full p-2 mt-2 border border-gray-300 rounded-md"
        required
      />

      <label for="email" class="block text-lg mt-4">Your Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full p-2 mt-2 border border-gray-300 rounded-md"
        required
      />

      <label for="message" class="block text-lg mt-4">Your Message:</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        class="w-full p-2 mt-2 border border-gray-300 rounded-md"
        required></textarea>

      <button
        type="submit"
        class="mt-4 px-6 py-2 bg-blue-600 text-white rounded-md"
        >Send Message</button
      >
    </form>
  </div>
</BaseLayout>
